<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator Screen"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingTop="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_number1"
        android:hint="enter number"
        android:paddingTop="80dp"
        android:inputType="number"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_number2"
        android:hint="enter number"
        android:inputType="number"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:text="ADD"
        android:textStyle="bold"
        android:onClick="addBtnClicked"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_subtract"
        android:text="Subtract"
        android:textStyle="bold"
        android:onClick="subtractBtnClicked"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_multiply"
        android:text="Multiply"
        android:textStyle="bold"
        android:onClick="multiplyBtnClicked"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_division"
        android:text="Division"
        android:textStyle="bold"
        android:onClick="divisionBtnClicked"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="Logout"
        android:textStyle="bold"
        android:onClick="logoutBtnClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv"
        android:textAlignment="center"
        android:textStyle="bold"/>

</LinearLayout>